#include <iostream>
using namespace std;

class Complex
{
    float real, imag;

public:
    // Constructor
    Complex(float r = 0, float i = 0)
    {
        real = r;
        imag = i;
    }

    // Overloading + operator
    Complex operator + (Complex c)
    {
        Complex temp;
        temp.real = real + c.real;
        temp.imag = imag + c.imag;
        return temp;
    }

    // Overloading - operator
    Complex operator - (Complex c)
    {
        Complex temp;
        temp.real = real - c.real;
        temp.imag = imag - c.imag;
        return temp;
    }

    // Display function
    void display()
    {
        cout << real << " + " << imag << "i";
    }
};

int main()
{
    Complex c1(5, 4);
    Complex c2(2, 3);

    Complex sum = c1 + c2;
    Complex diff = c1 - c2;

    cout << "First Complex Number: ";
    c1.display();

    cout << "\nSecond Complex Number: ";
    c2.display();

    cout << "\nSum: ";
    sum.display();

    cout << "\nDifference: ";
    diff.display();

    return 0;
}
